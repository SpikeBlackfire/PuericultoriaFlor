      <div class="row">
        <div class="col-7">
          <h3>Listado de Noticias</h3>
        </div>
        <div class="col-5 text-end">
          <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus">nuevo</i></a>
        </div>
