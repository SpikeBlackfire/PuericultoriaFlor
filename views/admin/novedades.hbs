      <div class="row">
        <div class="col">
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
                <th scope="col">Imagen</th>
                <th scope="col" class="text-center">Acciones</th>
              </tr>
            </thead>

            <tbody>

              {{#each novedades}}
              <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{{imagen}}}</td>
                <td class="text-center">
                  <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary" style="margin-bottom:2px ;"><i class="fa fa-pencil"></i> </a>
                  <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary"><i
                      class="fa fa-trash"></i></a>
                </td>
              </tr>
              {{/each}}

            </tbody>
          </table>
        </div>
