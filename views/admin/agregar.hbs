 <div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una Noticia</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control form-control-sm" style="margin-bottom:5px ;" placeholder="Titulo" name="titulo">
                </div>
            
                <div class="form-group">
                    <input name="subtitulo" type="text" class="form-control" style="margin-bottom:5px ;" placeholder="Subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                </div>

                <div class="form-group">
                    <textarea name="cuerpo" placeholder="Cuerpo" class="form-control form-control-lg"></textarea>
                </div>
                <br>
                <button type="submit" class="btn btn-success">Post!</button>
            </form>
        </div>
    </div> 
</div> 
  

{{#if error}}
<h5>{{message}}</h5>
{{/if}}